#!/usr/bin/env ruby
def getting_player_information
  puts "Welcome to Ruby's Tic-Tac-Toe"
  puts "\n"
  puts "Enter Player 1 name:"
  player1 = gets.chomp
  puts "\n"
  puts "Enter Player 2 name:"
  player2 = gets.chomp
  puts "\n"
  puts "#{player1} will play with X and #{player2} will play with O"

  players = [player1, player2]

  i = 0
  r = 0
  while i < 10 do #This loop will go on until someone wins the game. 10 is just a dummy figure right now.
    puts "its #{players[r]}'s turn to play"
    r == 1 ? r = 0 : r+=1
    i+=1
  end
end

getting_player_information()