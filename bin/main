#!/usr/bin/env ruby
module GetPlayerInformation
  puts "Welcome to Ruby's Tic-Tac-Toe"
  puts "\n"
  puts 'Enter Player 1 name:'
  PLAYER_1 = gets.chomp
  puts "\n"
  puts 'Enter Player 2 name:'
  PLAYER_2 = gets.chomp
  puts "\n"
  puts "#{PLAYER_1} will play with X and #{PLAYER_1} will play with O"
end

class GamePlay
  include GetPlayerInformation
  players = [PLAYER_1, PLAYER_2]
  i = 0
  r = 0
  player0_numbers_chosen = []
  player1_numbers_chosen = []
  while i < 9
    puts "its #{players[r]}'s turn to play"
    puts "\n"
    puts 'Enter a number that has not yet been chosen:'
    puts "\n"
    input_number = gets.chomp
    r.zero ? player0_numbers_chosen.push(input_number) : player1_numbers_chosen.push(input_number)
    r == 1 ? r = 0 : r += 1
    i += 1
  end
end
